.container.content-container#chat-container
    .chat-profile-container(ng-class="{'online' : toUser.onlineStatus.online}")
        .col-md-2.col-xs-3.img-col
            img(src="{{toUserPicture}}")
        .col-md-10.col-xs-9.name-col
            .text-left
                h5.name(once-text="toUser.name")
            .text-left(once-text="toUser.classesString")
            .text-left {{toUser.status || 'No status to display.'}}
    .chat-message-display-container(scroll-glue="true")
        .chat-message(ng-repeat="m in messages track by m.createdAt")
            .col-xs-1.img-col(once-show="m.from != me._id")
                img(once-src="toUserPicture")
            .col-xs-10.text-col(once-class="{'col-xs-offset-1': m.from == me._id}")
                strong.chat-date(once-text="formatDate(m.createdAt)", once-class="{'text-right' : m.from == me._id}")
                .chat-text(once-text="m.text", once-class="{'pull-right' : m.from == me._id}")
            .col-xs-1.img-col(once-show="m.from == me._id", style="padding-right: 5px; padding-left: 0px;")
                img(once-src="mePicture")

    .chat-input-container
        .row
            .col-md-11.col-xs-10
                textarea.input(ng-model="message.text", ng-keypress="evalKeypress($event)")
            .col-md-1.col-xs-2
                .btn.btn-send(ng-click="sendMessage()") SEND









