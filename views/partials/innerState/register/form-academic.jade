.col-xs-12(ng-init="visitedForms.push('academic')")
    .row
        .col-md-6.col-xs-12
            .form-group.form-group-lg.row#tagSelection
                label.input-lg.col-xs-12 College:
                ui-select(multiple, ng-model="formData.colleges", theme="select2", style="width: 100%;")
                    ui-select-match(placeholder="Select college(s)") {{$item}}
                    ui-select-choices(repeat="college in allColleges | filter: $select.search") {{college}}

            .form-group.form-group-lg.row
                input(type="hidden", ng-model="formData.gradclassSeason")
                label.col-lg-12.col-xs-12.input-lg Graduating Class

                .col-md-5
                    button.btn.btn-default.input-lg(type='button', ng-model='formData.gradclassSeason',
                    ng-options="s as s for s in ['Fall', 'Spring', 'Summer']", bs-select='', style="width: 100%;"
                    placeholder="Semester")
                        span.caret

                .col-md-4.col-md-offset-1
                    input.form-control.input-lg.btn.btn-default(ng-model="formData.gradclassYear", ui-mask="9999", placeholder="Year")

        .col-md-5.col-md-offset-1.col-xs-12
            .form-group.form-group-lg.row
                label.col-xs-12.input-lg Major(s):
                input.col-xs-12.form-control.input-lg(ng-model="formData.major", placeholder="comma-separated")

            .form-group.form-group-lg.row
                label.col-xs-12.input-lg Minor(s):
                input.col-xs-12.form-control.input-lg(ng-model="formData.minor", placeholder="comma-separated")


    .row.form-control-row
        .col-xs-6.text-center
            a.btn-form(ui-sref='site.register.membership')
                i.fa.fa-angle-left
                span Back
        .col-xs-6.text-center
            a.btn-form(ui-sref="{{formData.status === 'Alumni' ? 'site.register.bio' : 'site.register.networks'}}")
                span Next
                i.fa.fa-angle-right
